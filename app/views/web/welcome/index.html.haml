= provide(:description, 'JuniorJobs it is resource for free publication of vacancies')
= provide(:keywords, 'Vacancies, junior, job, jobs, work, remote, free, developers, testers')

= render 'web/subscriptions/banner'

- if @jobs_published_today.any?
  .row.mt20
    .col-sm-12
      %h3.title= t('web.welcome.index.last')
      - @jobs_published_today.each do |job|
        = render 'job', job: job

- if @jobs_published_yesterday.any?
  .row.mt20
    .col-sm-12
      %h3= t('web.welcome.index.yesterday')
      - @jobs_published_yesterday.each do |job|
        = render 'job', job: job

- if @jobs_published_last_week.any?
  .row.mt20
    .col-sm-12
      %h3= t('web.welcome.index.week')
      - @jobs_published_last_week.each do |job|
        = render 'job', job: job

- if @jobs_published_last_month.any?
  .row.mt20
    .col-sm-12
      %h3= t('web.welcome.index.month')
      - @jobs_published_last_month.each do |job|
        = render 'job', job: job

= render 'web/subscriptions/banner'
